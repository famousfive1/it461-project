import { faker } from '@faker-js/faker';

function generateRandomUserData(i: number): {
    id: number;
    username: string;
    password: string;
} {
    const id = i;
    const username = faker.internet.userName();
    const password = faker.internet.password();

    return { id, username, password };
}

function generateRandomTransactions(i: number): {
    id: number;
    game_id: number;
    user_id: number;
    amount: string;
    status: string;
} {
    const id = i;
    const game_id = 0;
    const user_id = 1;
    const amount = "Free";
    const status = "Success";
    return { id, game_id, user_id, amount, status };
}

function generateRandomReviews(i: number): {
    id: number;
    game_id: number;
    user_id: number;
    review: string;
    rating: number;
} {
    const id = i;
    const game_id = 0;
    const user_id = 1;
    const review = "asdf";
    const rating = 3;
    return { id, game_id, user_id, review, rating };
}

export const user = Array(100).forEach((_, i) => generateRandomUserData(i));
export const trans = Array(100).forEach((_, i) => generateRandomTransactions(i));
export const reviews = Array(100).forEach((_, i) => generateRandomReviews(i));


